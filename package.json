{
  "name": "rift-cli",
  "version": "1.0.5",
  "description": "A Git alternative written in Go",
  "main": "bin/rift",
  "bin": {
    "rift": "bin/rift"
  },
  "scripts": {
    "postinstall": "node scripts/install.js",
    "version:update": "node scripts/update-version.js",
    "build": "go build -o rift .",
    "build:all": "GOOS=linux GOARCH=amd64 go build -o rift-linux-amd64 . && GOOS=darwin GOARCH=amd64 go build -o rift-darwin-amd64 . && GOOS=darwin GOARCH=arm64 go build -o rift-darwin-arm64 ."
  },
  "keywords": ["git", "version-control", "cli", "golang"],
  "author": "Jack Smethurst",
  "license": "MIT",
  "homepage": "https://github.com/jacksmethurst/rift-cli",
  "repository": {
    "type": "git",
    "url": "https://github.com/jacksmethurst/rift-cli.git"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "tar": "^6.2.0"
  },
  "os": ["darwin", "linux", "win32"],
  "files": [
    "bin/",
    "scripts/",
    "README.md"
  ]
}